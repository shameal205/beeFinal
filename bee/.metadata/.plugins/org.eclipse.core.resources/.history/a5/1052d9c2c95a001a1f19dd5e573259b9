package com.bee.simplejdbc.repository;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

@Repository
public class UserRepository {

	/*
	 * autowiring jdbc using configured setting in application.properties
	 * 
	 */
	@Autowired
	JdbcTemplate jdbcTemplate;

	/*
	 * @return usernameList
	 * 
	 */
	public List<String> getAllBeeTags() {
		List<String> beeIdList = new ArrayList<>();
		beeIdList.addAll(jdbcTemplate.queryForList("SELECT name FROM dev_db.user;", String.class));
		return beeIdList;
	}

}
